<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/custom_toast_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom Toast"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/tog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toggle Button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/checkbox_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Box"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/spinner_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Spinner"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/auto_complete_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Auto Complete TextView"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/rating_bar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rating Bar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/alert_dailog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alert Dailog"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/date_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date Picker"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/time_picker_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time Picker"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/radio_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Radio Button"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/seek_bar_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seek Bar"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/scroll_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Scroll View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/hori_scroll_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Horizonatal Scroll View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/list_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="List View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/image_switcher_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image Switcher"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/image_slider_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Image Slider"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/progress_dialog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Progress Dialog"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/web_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web View"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/custom_alert_dialog_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Custom Alert Dialog"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/search_view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search View"
                android:textAllCaps="false" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>